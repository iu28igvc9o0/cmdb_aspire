    <modelVersion>4.0.0</modelVersion>

    <artifactId>index-proxy-war</artifactId>
    <packaging>war</packaging>

    <properties>
        <java.version>1.8</java.version>
        <start-class>com.aspire.mirror.indexproxy.IndexProxyApplication</start-class>
    </properties>

    <build>
        <finalName>proxy</finalName>
        <sourceDirectory>../index-proxy/src/main/java</sourceDirectory>
        <testSourceDirectory>../index-proxy/src/test/java</testSourceDirectory>
        <resources>
            <resource>
                <directory>../index-proxy/src/main/resources</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>com.spotify</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <version>1.0.0</version>
                <configuration>
                    <imageName>${project.artifactId}</imageName>
                    <baseImage>java:8-jre</baseImage>
                    <entryPoint>["java", "-jar","/opt/${project.build.finalName}.jar"]</entryPoint>
                    <resources>
                        <resource>
                            <targetPath>/opt</targetPath>
                            <directory>${project.build.directory}</directory>
                            <include>*.jar</include>
                        </resource>
                    </resources>
                </configuration>
            </plugin>
        </plugins>
    </build>
